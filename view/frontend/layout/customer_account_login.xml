<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="customer_form_login">
                <action ifconfig="hoodoor/general/enable_frontend" method="setTemplate">
                    <argument name="template" xsi:type="helper"
                              helper="Opengento\Hoodoor\Model\Template\Manager::getTemplate">
                        <param name="default">Magento_Customer::form/login.phtml</param>
                        <param name="override">Opengento_Hoodoor::form/login.phtml</param>
                        <param name="type">customer</param>
                    </argument>
                </action>
                <arguments>
                    <argument name="login_view_model" xsi:type="object">
                        Opengento\Hoodoor\ViewModel\Request\Login
                    </argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
